@using eticket.Models;
@model IEnumerable<Movie>
@{
    ViewData["Title"] = "List of Movie";
}
<html>
<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>


<div class="Row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    Movie Name sample
                                    <a class="text-white float-right"><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>

                    <div  class="col-md-6">
                        <img src = "" width="100%" alt="">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">Description Sample</p>
                            <p class="Card-text"><b>Cinema:</b>Name Sample</p>
                            <p class="Card-text"><b>Category:</b>Name Sample</p>
                            <p class="Card-text"><b>Start Date:</b>Name Sample</p>
                            <p class="Card-text"><b>End Date:</b>Name Sample</p>
                            <p class="card-text">
                                <b>Status:</b>
                                Status Sample
                            </p>
                        </div>
                    </div>
                    <div class = "col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right"><i class="bi bi-eye-fill"></i> Show Detail</a>
                                <a class="btn btn-outline-primary"><i class="bi bi-cart-plus"></i> Add To Cart</a>

                            </p>

                        </div>
                    </div>
                </div>
            </div>
        


 
</div>
}
</div>
</body>
</html>